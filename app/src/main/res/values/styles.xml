<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/AWSEActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/AWSEButtonOverflow</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AWSEActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_background_dark</item>
        <item name="android:titleTextStyle">@style/AWSEActionBarTitleText</item>
    </style>

    <style name="AWSEActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AWSEButtonOverflow"
        parent="@android:style/Widget.Holo.ActionButton.Overflow">
    </style>

    <style name="AWSEDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:divider">@null</item>

    </style>

</resources>
