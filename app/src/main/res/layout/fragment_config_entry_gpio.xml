<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entry_gpio"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="fill_horizontal"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/t_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:gravity="left"
        android:minWidth="200dp"/>

    <EditText
        android:id="@+id/e_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:gravity="left"
        android:maxLength="8"
        android:maxLines="1"
        android:singleLine="true" />
    <!--    android:hint="Port to configure (ie. PH15)" -->
      
    <EditText
        android:id="@+id/e_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:gravity="left"
        android:maxLength="8"
        android:maxLines="1"
        android:singleLine="true" />
 <!--         android:hint="Function to configure the port for, mux 0 is as input, mux 1 as output" -->
 
    <EditText
        android:id="@+id/e_resistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:gravity="left"
        android:maxLength="8"
        android:maxLines="1"
        android:singleLine="true" />
    <!--         android:hint="Pull up/Pull down. 0 = disabled; 1 = pullup enabled; 2 = pulldown enabled (only valid when port is an input)" -->
    
    <EditText
        android:id="@+id/e_drive_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:gravity="left"
        android:maxLength="8"
        android:maxLines="1"
        android:singleLine="true" />
<!--         android:hint="Defines the output drive in mA, values are 0-3 corresponding to 10mA, 20mA, 30mA and 40mA" -->
    <EditText
        android:id="@+id/e_out_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:gravity="left"
        android:maxLength="8"
        android:maxLines="1"
        android:singleLine="true" />
   <!--         android:hint="Sets the initial output level for the port; 0 = low; 1 = high (only valid for outputs)" -->
</LinearLayout>